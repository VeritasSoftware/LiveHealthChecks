@using LiveHealthChecks.UI.Models
@using MudBlazor
@inject HttpClient Http

<MudDialog>
    <DialogContent>
        @if (DashboardSettings != null)
        {
            <SearchWidget 
                DashboardSettings="DashboardSettings"
                NewDataArrived="NewDataArrived"
            ></SearchWidget>
        }
    </DialogContent>
    <DialogActions>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public DashboardSettings? DashboardSettings { get; set; }

    private bool NewDataArrived = false;  
}